@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <NavMenu/>
    <header class="bg-light border-bottom py-2">
        
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <img src="images/logo-gob.png" alt="Logo" style="height: 40px;"/>
                <h5 class="mb-0 text-primary">Plataforma DIGESA</h5>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/Account/Login" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                </a>
                <button class="btn btn-outline-secondary btn-sm" @onclick="ToggleTheme">
                    <i class="bi @(isDarkTheme ? "bi-sun" : "bi-moon")"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Body -->
    <main class="flex-grow-1 bg-light py-4">
        <div class="container-fluid">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-top py-3 text-center small text-muted">
        &copy; 2025 Plataforma DIGESA | Ministerio de Salud de Panamá
    </footer>
</div>

@code {
private bool isDarkTheme = false;

private async Task ToggleTheme()
{
isDarkTheme = !isDarkTheme;
await JSRuntime.InvokeVoidAsync("toggleTheme", isDarkTheme);
}
}
