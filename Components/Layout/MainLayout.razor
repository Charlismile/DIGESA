@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <NavMenu/>
    <header class="bg-light border-bottom py-2">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2" href="/">
                <img src="images/logo-gob.png" alt="Logo" style="height: 40px;"/>
                <h5 class="mb-0 text-dark">Plataforma DIGESA</h5>
            </div>
        </div>
    </header>

    <!-- Body -->
    <main class="flex-grow-1 bg-light py-4">
        <div class="container-fluid">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-top py-3 text-center small text-muted">
        &copy; 2025 Plataforma DIGESA | Ministerio de Salud de Panamá
    </footer>
</div>

@code {
private bool isDarkTheme = false;

private async Task ToggleTheme()
{
isDarkTheme = !isDarkTheme;
await JSRuntime.InvokeVoidAsync("toggleTheme", isDarkTheme);
}
}
