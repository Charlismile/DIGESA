@page "/elegistro"
@using BlazorBootstrap
@inject NavigationManager NavManager

<h3 class="mb-4">Elija una opción de registro</h3>

<div class="container py-5">
    <div class="row justify-content-center g-4">
        <!-- Card: Paciente -->
        <div class="col-md-6">
            <Card>
                <CardBody>
                    <h4 class="card-title d-flex align-items-center">
                        <Icon Name="IconName.PersonPlus" /> &nbsp;Paciente
                    </h4>
                    <p class="card-text">Registre una nueva solicitud o consulte el estado de una existente.</p>
                    <Button Color="ButtonColor.Primary" Class="w-100 mt-2" Clicked="@RegistrarPaciente">
                        <Icon Name="IconName.PersonPlus" /> Registrar Solicitud
                    </Button>
                    <Button Color="ButtonColor.Info" Class="w-100 mt-2" Clicked="@ConsultarEstado">
                        <Icon Name="IconName.Search" /> Consultar Estado
                    </Button>
                </CardBody>
            </Card>
        </div>

        <!-- Card: Médico / Funcionario MINSA -->
        <div class="col-md-6">
            <Card>
                <CardBody>
                    <h4 class="card-title d-flex align-items-center">
                        <Icon Name="IconName.PersonCheck" /> &nbsp;Médico / Funcionario MINSA
                    </h4>
                    <p class="card-text">Inicie sesión para revisar solicitudes y emitir certificaciones médicas.</p>
                    <Button Color="ButtonColor.Success" Class="w-100 mt-2" Clicked="@IniciarSesion">
                        <Icon Name="IconName.BoxArrowInRight" /> Iniciar Sesión
                    </Button>
                </CardBody>
            </Card>
        </div>
    </div>
</div>

@code {
    private void RegistrarPaciente()
    {
        NavManager.NavigateTo("/registro");
    }

    private void ConsultarEstado()
    {
        NavManager.NavigateTo("/seguimiento-solicitud");
    }

    private void IniciarSesion()
    {
        NavManager.NavigateTo("/Account/Login");
    }
}
