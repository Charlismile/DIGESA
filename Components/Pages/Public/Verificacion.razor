@page "/buscar-paciente"

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-gob-blue text-white d-flex justify-content-between align-items-center" style="background-color: #2b5205; color: white;">
            <div class="d-flex align-items-center">
                <Icon Name="IconName.Search" Class="me-1" Size="IconSize.x5" />
                <h2 class="mb-0">Buscar Paciente</h2>
            </div>
        </div>
        <div class="card-body">
            <!-- Filtro de búsqueda con el mismo estilo -->
            <div class="input-group input-group-sm mb-4" style="max-width:480px;">
                <input type="text" 
                       class="form-control" 
                       placeholder="Ingrese cédula o pasaporte (Ej: 8-800-0000 o PAS123456)" 
                       @bind="documentoBusqueda" 
                       @onkeypress="HandleKeyPress" />
                <button class="btn btn-gob-blue" 
                        @onclick="BuscarPaciente" 
                        disabled="@string.IsNullOrEmpty(documentoBusqueda)" 
                        type="button" style="background-color: #2b5205; color: white;">
                        <i class="bi bi-search"></i> Buscar
                </button>
            </div>

            @if (loading)
            {
                <div class="text-center mt-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Buscando...</span>
                    </div>
                    <p class="mt-2">Buscando paciente...</p>
                </div>
            }
            else if (busquedaRealizada)
            {
                <div class="mt-4">
                    @if (pacienteEncontrado && pacienteEstado is not null)
                    {
                        <div class="card shadow-sm">
                            <div class="card-header bg-gob-blue text-white" style="background-color: #2b5205; color: white;">
                                <h5 class="mb-0">Resultado de la Búsqueda</h5>
                            </div>
                            <div class="card-body">
                                @if (pacienteEstado.Activo)
                                {
                                    <div class="alert alert-success">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle fa-2x me-3"></i>
                                            <div>
                                                <h5 class="alert-heading">✅ PACIENTE ACTIVO</h5>
                                                <p class="mb-1">Paciente: <strong>@pacienteEstado.Nombre @pacienteEstado.Apellido</strong></p>
                                                <p class="mb-1">Documento: <strong>@pacienteEstado.Documento</strong></p>
                                                <p class="mb-1">Estado: <span class="badge bg-success">ACTIVO</span></p>
                                                <p class="mb-0">Vigente hasta: <strong>@pacienteEstado.FechaVencimiento?.ToString("dd/MM/yyyy")</strong></p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-times-circle fa-2x me-3"></i>
                                            <div>
                                                <h5 class="alert-heading">❌ PACIENTE INACTIVO</h5>
                                                <p class="mb-1">Paciente: <strong>@pacienteEstado.Nombre @pacienteEstado.Apellido</strong></p>
                                                <p class="mb-1">Documento: <strong>@pacienteEstado.Documento</strong></p>
                                                <p class="mb-1">Estado: <span class="badge bg-danger">INACTIVO</span></p>
                                                @if (pacienteEstado.FechaVencimiento.HasValue)
                                                {
                                                    <p class="mb-0">Certificación venció el: <strong>@pacienteEstado.FechaVencimiento.Value.ToString("dd/MM/yyyy")</strong></p>
                                                }
                                                else
                                                {
                                                    <p class="mb-0">No tiene certificación aprobada</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (pacienteDetalle is not null)
                                {
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <div class="card shadow-sm h-100">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Información Personal</h6>
                                                </div>
                                                <div class="card-body">
                                                    <table class="table table-sm table-hover">
                                                        <tr>
                                                            <th>Nombre completo:</th>
                                                            <td>@pacienteDetalle.PrimerNombre @pacienteDetalle.SegundoNombre @pacienteDetalle.PrimerApellido @pacienteDetalle.SegundoApellido</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Tipo documento:</th>
                                                            <td>@pacienteDetalle.TipoDocumentoPacienteEnum</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Nacionalidad:</th>
                                                            <td>@pacienteDetalle.Nacionalidad</td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card shadow-sm h-100">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Contacto</h6>
                                                </div>
                                                <div class="card-body">
                                                    <table class="table table-sm table-hover">
                                                        <tr>
                                                            <th>Teléfono personal:</th>
                                                            <td>@pacienteDetalle.TelefonoResidencialPersonal</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Teléfono laboral:</th>
                                                            <td>@pacienteDetalle.TelefonoLaboral</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Email:</th>
                                                            <td>@pacienteDetalle.CorreoElectronico</td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="alert alert-warning">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                                        <div>
                                            <h5 class="alert-heading">⚠ NO ENCONTRADO</h5>
                                            <p class="mb-0">No se encontró una solicitud para el documento: <strong>@documentoBusqueda</strong></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>