@page "/Public/buscar-paciente"
@using DIGESA.Models.CannabisModels

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header card-header-primary d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <Icon Name="IconName.Search" Class="me-1" Size="IconSize.x5"/>
                <h2 class="mb-0">Buscar Paciente</h2>
            </div>
        </div>
        <div class="card-body">
            <!-- Filtro de búsqueda con el mismo estilo -->
            <div class="input-group input-group-sm mb-4" style="max-width:480px;">
                <input type="text"
                       class="form-control"
                       placeholder="Ingrese cédula o pasaporte (Ej: 8-800-0000 o PAS123456)"
                       @bind="documentoBusqueda"
                       @onkeypress="HandleKeyPress" />

                <button class="btn btn-custom btn-primary-custom"
                        @onclick="BuscarPaciente"
                        disabled="@string.IsNullOrEmpty(documentoBusqueda)">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>


            @if (loading)
            {
                <div class="text-center mt-3">
                    <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75"
                         aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                             style="width: 75%"></div>
                    </div>
                </div>
            }
            else if (busquedaRealizada)
            {
                <div class="mt-4">
                    @if (pacienteEncontrado && pacienteEstado is not null)
                    {
                        <div class="card shadow-sm">
                            <div class="card-header bg-gob-blue text-white"
                                 style="background-color: #2c5530; color: white;">
                                <h5 class="mb-0">Resultado de la Búsqueda</h5>
                            </div>
                            <div class="card-body">
                                @if (pacienteEstado.Activo)
                                {
                                    <div class="alert alert-success">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle fa-2x me-3"></i>
                                            <div>
                                                <h5 class="alert-heading">✅ PACIENTE ACTIVO</h5>
                                                <p class="mb-1">Paciente:
                                                    <strong>@pacienteEstado.Nombre @pacienteEstado.Apellido</strong></p>
                                                <p class="mb-1">Documento: <strong>@pacienteEstado.Documento</strong>
                                                </p>
                                                <p class="mb-1">Estado: <span class="badge bg-success">ACTIVO</span></p>
                                                <p class="mb-0">Vigente hasta:
                                                    <strong>@pacienteEstado.FechaVencimiento?.ToString("dd/MM/yyyy")</strong>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-times-circle fa-2x me-3"></i>
                                            <div>
                                                <h5 class="alert-heading">❌ PACIENTE INACTIVO</h5>
                                                <p class="mb-1">Paciente:
                                                    <strong>@pacienteEstado.Nombre @pacienteEstado.Apellido</strong></p>
                                                <p class="mb-1">Documento: <strong>@pacienteEstado.Documento</strong>
                                                </p>
                                                <p class="mb-1">Estado: <span class="badge bg-danger">INACTIVO</span>
                                                </p>
                                                @if (pacienteEstado.FechaVencimiento.HasValue)
                                                {
                                                    <p class="mb-0">Certificación venció el:
                                                        <strong>@pacienteEstado.FechaVencimiento.Value.ToString("dd/MM/yyyy")</strong>
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p class="mb-0">No tiene certificación aprobada</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (pacienteDetalle is not null)
                                {
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <div class="card shadow-sm h-100">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Información Personal</h6>
                                                </div>
                                                <div class="card-body">
                                                    <table class="table table-sm table-hover">
                                                        <tr>
                                                            <th>Nombre completo:</th>
                                                            <td>@GetNombreCompleto()</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Documento:</th>
                                                            <td>@pacienteDetalle.Documento</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Nacionalidad:</th>
                                                            <td>@(pacienteDetalle.Nacionalidad ?? "No especificada")</td>
                                                        </tr>

                                                        <tr>
                                                            <th>Fecha nacimiento:</th>
                                                            <td>
                                                                @(pacienteDetalle.FechaNacimiento.HasValue
                                                                    ? pacienteDetalle.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                                                    : "No registrada")
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th>Sexo:</th>
                                                            <td>@GetSexoTexto()</td>
                                                        </tr>

                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card shadow-sm h-100">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Contacto</h6>
                                                </div>
                                                <div class="card-body">
                                                    <table class="table table-sm table-hover">
                                                        <tr>
                                                            <th>Teléfono personal:</th>
                                                            <td>@pacienteDetalle.TelefonoPersonal</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Teléfono laboral:</th>
                                                            <td>@pacienteDetalle.TelefonoLaboral</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Email:</th>
                                                            <td>@pacienteDetalle.CorreoElectronico</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Dirección:</th>
                                                            <td>@pacienteDetalle.DireccionExacta</td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (pacienteDetalle.RequiereAcompanante == EnumViewModel.RequiereAcompanante.Si)
                                    {
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <div class="card shadow-sm border-warning">
                                                    <div class="card-header bg-warning bg-opacity-25">
                                                        <h6 class="mb-0">
                                                            <i class="fa-solid fa-user-shield me-1"></i>
                                                            Información del Acompañante
                                                        </h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <table class="table table-sm table-hover mb-0">
                                                            <tr>
                                                                <th style="width: 35%">Requiere acompañante:</th>
                                                                <td><span class="badge bg-warning text-dark">Sí</span>
                                                                </td>
                                                            </tr>

                                                            @if (pacienteDetalle.MotivoRequerimientoAcompanante.HasValue)
                                                            {
                                                                <tr>
                                                                    <th>Motivo:</th>
                                                                    <td>@GetMotivoAcompananteTexto()</td>
                                                                </tr>
                                                            }

                                                            @if (!string.IsNullOrEmpty(pacienteDetalle.TipoDiscapacidad))
                                                            {
                                                                <tr>
                                                                    <th>Tipo de discapacidad:</th>
                                                                    <td>@pacienteDetalle.TipoDiscapacidad</td>
                                                                </tr>
                                                            }

                                                            <tr class="table-secondary">
                                                                <th colspan="2">Datos del acompañante</th>
                                                            </tr>

                                                            @if (pacienteDetalle?.Acompanante != null)
                                                            {
                                                                <tr>
                                                                    <th>Nombre completo:</th>
                                                                    <td>@pacienteDetalle.Acompanante.NombreCompleto</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Documento:</th>
                                                                    <td>@pacienteDetalle.Acompanante.NumeroDocumento</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Parentesco:</th>
                                                                    <td>@pacienteDetalle.Acompanante.Parentesco</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Teléfono:</th>
                                                                    <td>@pacienteDetalle.Acompanante.TelefonoMovil</td>
                                                                </tr>
                                                            }

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                                    <div>
                                        <h5 class="alert-heading">⚠ NO ENCONTRADO</h5>
                                        <p class="mb-0">No se encontró una solicitud para el documento:
                                            <strong>@documentoBusqueda</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<DynamicModal @ref="ModalForm"/>