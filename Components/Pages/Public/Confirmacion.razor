@page "/confirmacion"
@inject NavigationManager NavManager

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2>✅ RegistroDto completado</h2>
            <p class="lead">El paciente ha sido registrado exitosamente.</p>

            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Datos del Paciente</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Nombre completo:</strong> @NombreCompleto</li>
                        <li class="list-group-item"><strong>Tipo de documento:</strong> @TipoDocumento</li>
                        <li class="list-group-item"><strong>Número de documento:</strong> @NumeroDocumento</li>
                        <li class="list-group-item"><strong>Fecha de nacimiento:</strong> @FechaNacimiento?.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Dirección de residencia:</strong> @DireccionResidencia</li>
                    </ul>
                </div>
            </div>

            <div class="mt-4">
                <button class="btn btn-primary me-2" @onclick="IrAlInicio">Volver al inicio</button>
                <button class="btn btn-outline-secondary" @onclick="VerDetalles">Ver detalles del registro</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string NombreCompleto = "Juan Pérez";
    private string TipoDocumento = "Cédula";
    private string NumeroDocumento = "123456789";
    private DateTime? FechaNacimiento = new DateTime(1990, 5, 15);
    private string DireccionResidencia = "San José, Costa Rica";

    private void IrAlInicio()
    {
        NavManager.NavigateTo("/registro");
    }

    private void VerDetalles()
    {
        // Aquí puedes navegar a otra página con todos los datos registrados
        NavManager.NavigateTo("/detalles");
    }
}