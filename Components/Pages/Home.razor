                            <CarouselItem Active="true" Interval="5000">
                                <Image Src="images/1.jpeg"/>
                            </CarouselItem>
                            <CarouselItem Interval="5000">
                                <Image Src="images/2.jpeg"/>
                            </CarouselItem>
                            <CarouselItem Interval="5000">
                                <Image Src="images/3.jpeg"/>
                            </CarouselItem >
                        </Carousel>
                    </div>
                </div>
            </div>
        </div> 
    </section>

    <!-- Features Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container">
