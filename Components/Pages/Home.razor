@page "/"
@inject NavigationManager NavManager

    <section id="home" class="hero-section bg-gradient-primary">
        <div class="container">
            <div class="row align-items-center min-vh-100 py-5">
                <div class="col-lg-12 text-center">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold mb-3 animate-fadeInUp" style="animation-delay: 0.1s;">
                            Registro de Pacientes con <span style="color: green">Cannabis Medicinal</span>
                        </h1>
                        <p class="lead mb-4 animate-fadeInUp" style="animation-delay: 0.2s;">
                            Esta plataforma permite a los pacientes registrar sus solicitudes para el uso de cannabis medicinal y a los médicos emitir certificaciones médicas.
                            Seleccione una opción para continuar.
                        </p>
