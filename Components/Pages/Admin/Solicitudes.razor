@page "/Solicitudes"

<h3>Solicitudes</h3>

<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Paciente</th>
        <th>Fecha Solicitud</th>
        <th>Estado</th>
    </tr>
    </thead>
    <tbody>
    @if (SolicitudesLista is null)
    {
        <tr>
            <td colspan="4" class="text-center">Cargando solicitudes...</td>
        </tr>
    }
    else if (!SolicitudesLista.Any())
    {
        <tr>
            <td colspan="4" class="text-center">No hay solicitudes registradas.</td>
        </tr>
    }
    else
    {
        @foreach (var item in SolicitudesLista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.PacienteNombre</td>
                <td>@item.FechaSolicitud:dd/MM/yyyy</td>
                <td>@item.EstadoSolicitud</td>
            </tr>
        }
    }
    </tbody>
</table>
