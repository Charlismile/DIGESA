@page "/Create/{UserName?}"
@using DIGESA.Data
@using DIGESA.Repositorios.Interfaces
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject NavigationManager _NavigationProvider
@inject UserManager<ApplicationUser> _UserManager
@inject IUserData _UserService
@attribute [StreamRendering]
@attribute [Authorize(Roles = "Administrador")]

<div class="container-fluid py-4">
    <EditForm EditContext="EditContext" OnValidSubmit="RegisterUser">
        <div class="row g-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #2b5205; color: white;">
                        <h2 class="mb-0">Registro de Usuario</h2>
                        <NavLink class="btn btn-light" href="/UserRegistrados" Match="NavLinkMatch.All">
                            <i class="fa-solid fa-arrow-left me-1"></i> Volver
                        </NavLink>
                    </div>
                    <div class="card-body">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger d-block" />
                        @if (ErrorsFormMessages.Count > 0)
                        {
                            <ul class="alert alert-danger">
                                @foreach (var item in ErrorsFormMessages)
                                {
                                    <li>@item</li>
                                }
                            </ul>
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Correo</label>
                                    <div class="input-group input-group-sm">
                                        <InputText @bind-Value="FormData.Email" placeholder="correo@minsa.gob.pa" class="form-control text-lowercase" />
                                        <button type="button" class="btn btn-success" @onclick="ValidateEmail" style="background-color: #2b5205; color: white;">
                                            <i class="bi bi-check2-circle"></i> Validar 
                                        </button>
                                    </div>
                                    <ValidationMessage For="() => FormData.Email" class="text-danger" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Nombre</label>
                                    <InputText @bind-Value="FormData.FirstName" class="form-control form-control-sm" disabled="@(!UserFound)" />
                                    <ValidationMessage For="() => FormData.FirstName" class="text-danger" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Apellido</label>
                                    <InputText @bind-Value="FormData.LastName" class="form-control form-control-sm" disabled="@(!UserFound)" />
                                    <ValidationMessage For="() => FormData.LastName" class="text-danger" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-secondary mb-3">
                                    <div class="card-header bg-light fw-bold">Roles Asignados</div>
                                    <div class="card-body">
                                        <div class="row row-cols-1 gx-2 gy-2">
                                            <div class="col d-flex align-items-center">
                                                <InputCheckbox id="IsMedico" class="form-check-input me-2" @bind-Value="FormData.IsMedico" />
                                                <label class="form-check-label" for="IsMedico">Médico</label>
                                            </div>
                                            <div class="col d-flex align-items-center">
                                                <InputCheckbox id="IsPaciente" class="form-check-input me-2" @bind-Value="FormData.IsPaciente" />
                                                <label class="form-check-label" for="IsPaciente">Paciente</label>
                                            </div>
                                            <div class="col d-flex align-items-center">
                                                <InputCheckbox id="IsAdministrador" class="form-check-input me-2" @bind-Value="FormData.IsAdministrador" />
                                                <label class="form-check-label" for="IsAdministrador">Administrador</label>
                                            </div>
                                            <div class="col d-flex align-items-center">
                                                <InputCheckbox id="IsExterno" class="form-check-input me-2" @bind-Value="FormData.IsExterno" />
                                                <label class="form-check-label" for="IsExterno">Externo</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-end">
                        <button type="submit" class="btn btn-success" style="background-color: #2b5205; color: white;">
                            <i class="bi bi-floppy"></i> Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
</div>
